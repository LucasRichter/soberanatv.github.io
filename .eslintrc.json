{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["xo"],
    "overrides": [
        {
            "extends": ["next/core-web-vitals", "next"],
            "files": ["src/*.tsx", "src/*.jsx", "src/*.ts", "src/*.js"]
        },
        {
            "plugins": ["react", "tailwindcss"],
            "extends": [
                "plugin:tailwindcss/recommended",
                "plugin:react/recommended"
            ],
            "files": ["src/*.tsx", "src/*.jsx"]
        },
        {
            "extends": ["xo-typescript"],
            "files": ["*.ts", "*.tsx"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [],
    "rules": {}
}
